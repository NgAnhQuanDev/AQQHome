<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <inset android:insetTop="2dp" android:insetBottom="2dp" android:insetLeft="2dp" android:insetRight="2dp">
            <shape>
                <solid android:color="@color/blue"></solid>
                <corners android:radius="1dp" />
            </shape>
        </inset>
    </item>
    <item android:state_pressed="true">
        <inset android:insetTop="1dp" android:insetBottom="1dp" android:insetLeft="1dp" android:insetRight="1dp">
            <shape>
                <solid android:color="@color/lighterBlue"></solid>
                <corners android:radius="1dp" />
            </shape>
        </inset>
    </item>
    <item>
        <layer-list>
            <item android:top="-1dp" android:bottom="-1dp" android:left="-1dp">
                <shape>
                    <solid android:color="@android:color/transparent"></solid>
                    <stroke android:width="1dp" android:color="@color/blue"></stroke>
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
