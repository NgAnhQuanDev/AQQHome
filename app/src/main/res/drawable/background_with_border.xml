<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền của background -->
    <solid android:color="#FFFFFF" />

    <!-- Tạo đánh bóng cho các góc -->
    <corners android:radius="8dp" />

    <!-- Tạo viền màu xám nhẹ -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" />

    <!-- Tùy chọn: Thêm hiệu ứng đổ bóng nếu cần -->
    <!-- Bạn có thể chỉnh sửa hoặc bỏ qua phần này tùy theo yêu cầu -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
