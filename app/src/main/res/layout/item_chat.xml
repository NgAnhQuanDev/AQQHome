<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/it_img_avt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logoaqqhome"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/Circler"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/it_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn Dũng"
                android:textColor="#222222"
                android:fontFamily="@font/roboto"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/it_tv_tinnhancuoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello em có người yêu chưa"
                android:textColor="#666666" />

        </LinearLayout>

        <ImageView
            android:id="@+id/it_tv_tt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dot"
            android:scaleType="centerCrop"
            android:textColor="#666666"
            android:layout_gravity="right" />

    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"

        android:layout_marginStart="@dimen/_55sdp"
        android:layout_height="1dp"
        android:background="#DADADA"
        />
</LinearLayout>
