<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FCE4EC"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idpheduyet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FCE4EC"
                android:fontFamily="@font/roboto"
                android:padding="4dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"

                android:text="Phê duyệt #23823293"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="12sp"
                android:background="#FCE4EC"
                android:fontFamily="@font/roboto"
                android:padding="4dp"
                android:text="20/11/2023">

            </TextView>


            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/baseline_arrow_drop_down_24_black">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Người gửi: ">

            </TextView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A">

            </TextView>

        </LinearLayout>





        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Phòng:"></TextView>

            <TextView
                android:id="@+id/roomname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14-01"></TextView>

        </LinearLayout>







        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tầng:"></TextView>

            <TextView
                android:id="@+id/tang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mã hợp đồng:">
            </TextView>

            <TextView
                android:id="@+id/mahopdong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1483283">

            </TextView>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Trạng thái:">

            </TextView>

            <TextView
                android:id="@+id/kichhoat"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Đang xác minh">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/macode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã code: "

            android:textColor="#F44336"
            android:visibility="gone" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tuchoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Từ chối"
                android:visibility="gone"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_duyet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:text="Duyệt"
                android:visibility="gone">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>