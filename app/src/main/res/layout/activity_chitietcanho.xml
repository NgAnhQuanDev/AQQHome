<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.ChiTietCanHoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_arrow_back_ios_24"></ImageView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="Chi tiết căn hộ"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>


    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view2">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:text="1. Thông tin chủ sở hữu"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"></TextView>
            <ImageView
                android:id="@+id/edit1"
                android:layout_marginTop="10dp"
                android:layout_width="25dp"
                android:layout_marginRight="10dp"
                android:layout_height="25dp"
                android:src="@drawable/editinfo">
            </ImageView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_weight="1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="●    Tên chủ sở hữu:"
                android:textSize="15sp"></TextView>
            <TextView
                android:id="@+id/tensohuu"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="●    Số căn cước:"
                android:textSize="15sp"></TextView>
            <TextView
                android:id="@+id/socancuoc"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="●    Số điện thoại:"
                android:textSize="15sp"></TextView>
            <TextView
                android:id="@+id/sodienthoai"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="●    Ngày bàn giao căn hộ:"
                android:textSize="15sp"></TextView>
            <TextView
                android:id="@+id/ngaybangiao"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e4e4e4"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto"
                android:text="2. Thông tin căn hộ"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold">

            </TextView>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Tên căn hộ:"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/nameroom"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Số lượng xe:"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/parking"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Diện tích:"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/dientich"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Tầng căn hộ:"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/tang"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e4e4e4">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto"
                android:text="3. Thông tin quản lý"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold">

            </TextView>
            <ImageView
                android:id="@+id/edit2"
                android:layout_marginTop="7dp"
                android:layout_width="25dp"
                android:layout_marginRight="10dp"
                android:layout_height="25dp"
                android:src="@drawable/editinfo">
            </ImageView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Mã hợp đồng:"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/mahopdong"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Ngày đăng ký quản lý online:"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/ngaydangky"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Mã truy cập:"
                android:textSize="15sp">

            </TextView>
            <TextView
                android:id="@+id/code"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:text="-"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
            </TextView>
            <ImageView

                android:layout_width="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="70dp"
                android:layout_height="20dp"
                android:src="@drawable/refreshbutton">
            </ImageView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#e4e4e4">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="➻ ➻In mã QR"
            android:textColor="@color/blue"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:text="➻ ➻Lịch sử thanh toán căn hộ"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/xoacanho"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/red"
            android:text="Xóa căn hộ"
            android:layout_height="wrap_content">
        </TextView>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>